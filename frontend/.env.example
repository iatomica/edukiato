# --- Configuración de Base de Datos ---
# Usuario de PostgreSQL (por defecto en Coolify suele ser postgres)
DB_USER=postgres
# Contraseña segura para la BD
DB_PASSWORD=contraseña_segura_produccion
# Nombre de la base de datos
DB_NAME=artis_db

# --- Secretos de la Aplicación ---
# Generar una cadena aleatoria larga para firmar los JWT
# Puedes usar `openssl rand -base64 32` en la terminal
JWT_SECRET=cambiar_esto_por_un_secreto_largo_y_seguro

# --- Despliegue ---
# Puerto donde el Frontend será expuesto (Interno de Docker o Host)
PORT=8000